.message-box{data: {message: {id: message.id}}}
  .message-info
    .message-info__name
      = message.user.name
    .message-info__date
      = message.date
  - if message.content.present?
    .message-text
      = message.content
  = image_tag message.image.url, class: "message-image" if message.image.present?