.side-bar
  .side-bar__user
    .side-bar__user-box
      .side-bar__user-box-name
        = current_user.name
      .side-bar__user-box-icon
        %span
          = link_to new_group_path do
            = icon('fas', 'edit')
        %span
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: "user-box-icon")
  .side-bar__group-list
    - current_user.groups.each do |group|
      .side-bar__group-box
        =link_to "#" do
          .side-bar__group-box-name
            = group.name
          .side-bar__group-box-message
            メッセージはまだありません
